<%- include('includes/head') %>

    <div class="box container section column is-one-third section is-small">
        <h1 class="title">Edit New Product</h1>

        <form method='POST' action="/products/<%= products._id %>/edit/?_method=PATCH">

            <div class="field">
                <label for="name">Product Name:</label>
                <input class="input" type="text" name="name" id="name" value="<%= products.name %>" required>
            </div>
            <div class="field">
                <label for="number">Enter price: $</label>
                <input class="input" type="number" name="price" id="price" min="0" max="100" step="0.01"
                    value="<%= products.price %>">
            </div>
            <div class="field">
                <label for="category">Select Category:</label>
                <select class="input" name="category" id="category">
                    <% for(cat of category){ %>
                        <option value="<%= cat %>" <%=products.category===cat ? 'selected' : '' %> ><%= cat %>
                        </option>
                        <% } %>

                </select>
            </div>
            <button class='button block is-light'>Submit</button>
            <a class='button is-light block' href="/products">Home</a>
        </form>

    </div>
    <%- include('includes/footer') %>